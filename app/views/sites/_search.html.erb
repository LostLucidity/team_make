<h4>Search Through All Available Athletes</h4>
<%= form_tag('athletes/search', :method => :get) do %>
<%= search_field_tag :Athlete %>
<%= submit_tag "Search", url: 'athletes#search', class: "btn btn-success", id: "search" %>
<% end %>



<h2>Search Results</h2>
<div class="col-md-6 col-sm-12 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body pre-scrollable" style = 'max-height: 400px; background-color: white; border-radius: 15px'>
              <table class="table table-striped table-hover">

                <% if @atheltes %>
                <% Athlete.all.each do |athlete| %>
                  <tr>
                      <td><%= athlete.name.capitalize %></td>
                      <td><%= athlete.age %></td>
                  </tr>
                  <% end %>

                <% end %>

              </table>
            </div>
          </div>
        </div>


