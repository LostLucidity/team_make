<style>
	.message {
		width: 80%;
		height: 200px;
		background: red;
		display: none;
	}
</style>

<div class="message">
</div>

<div class="stripe-form">
	<p>How much</p>
	<span id="amount" data-tryout="<%= @tryout.id %>" data-price="<%= @tryout.price %>"><%= number_to_currency @tryout.price %></span>
	<button class="buttonz">Pick me! Pick me!</button>
</div>

<%= form_tag(tryout_charges_path(@tryout)) do %>
	<article>
		<% if flash[:error].present? %>
			<div id="error_explanation">
				<p>
					<%= flash[:error] %>
				</p>
			</div>
		<% end %>
		<label class ="amount">
			<span>Amount: <%= @tryout.price %></span>
		</label>
	</article>
<% end %>
