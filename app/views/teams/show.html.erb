<div id="wrapper">
  <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="index.html"><%= current_club.club_name.capitalize %></a>
    </div>
    <div style="color: white;
    padding: 15px 50px 5px 50px;
    float: right;
    font-size: 16px;"> Making Teams Since : <%= current_club.created_at.strftime("%m-%d-%Y") %> &nbsp; <%= link_to 'Log out', logout_path , :class => "btn btn-danger square-btn-adjust"%> </div>
  </nav>
  <!-- /. NAV TOP  -->
  <nav class="navbar-default navbar-side" role="navigation">
    <div class="sidebar-collapse">
      <ul class="nav" id="main-menu">
        <li class="text-center">
          <%= image_tag current_club.logo(:medium) %>
        </li>
        <li>
          <!-- #replace with Link_to -->
          <%= link_to '<i class="fa fa-tachometer"> &nbsp; Manage Club</i>'.html_safe, club_season_path(current_club, current_season)%>
        </li>
        <li>
          <!-- #replace with Link_to -->
          <%= link_to '<i class="fa fa-wrench">  &nbsp;  Update Club Info</i>'.html_safe, edit_club_path(current_club, current_season)%>
        </li>
        <li>
          <!-- #replace with Link_to -->
          <a><i class="fa fa-users"></i>View All Registered Athletes</a>
        </li>
        <li>
          <!-- #replace with Link_to -->
          <a><i class="fa fa-trash-o"></i>Delete Club Account</a>
        </li>
      </ul>
    </div>
  </nav>
  <!-- /. NAV SIDE  -->
  <div id="page-wrapper" >
    <div id="page-inner">
      <div class="row">
        <div class="col-md-12">
          <h2> <%= current_club.club_name.capitalize %> </h2>
          <h5>Welcome back <%= current_club.director.capitalize %>. Start making new <%= current_club.sport.capitalize %> teams. </h5>
        </div>
      </div>
      <!-- /. ROW  -->
      <hr />
      <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-6">
          <div class="panel panel-back noti-box">
            <div class="text-box" >
              <h4><%= @team.name.capitalize %></h4>
              <h4><%= @team.age_group %> and under</h4>
              <h4>Coach: <%= @team.coach.capitalize %></h4>
            </div>
          </div>
        </div>
      </div>
      <hr />
      <!-- /. ROW  -->
      <div class="row">
        <div class="col-md-6 col-sm-12 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <i class="fa fa-plus-circle"></i>  Available Athletes
            </div>
            <div class="panel-body pre-scrollable" style = 'max-height: 400px; background-color: white; border-radius: 15px'>
              <table class="table table-striped table-hover">
                <% @tryouts.each do |tryout| %>
                  <% tryout.athletes.all.each do |athlete|%>
                    <% if (athlete.age <= @team.age_group) %>
                      <tr class="active">
                        <td><%= athlete.name.capitalize %></td>
                        <td><%= render 'spots/new_spot', athlete: athlete %></td>
                      </tr>
                    <% end %>
                  <% end %>
                <% end %>
              </table>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <i class="fa fa-plus-circle"></i>  Sent Invitations
              </div>
              <div class='panel-body pre-scrollable' style = 'max-height: 400px; background-color: white; border-radius: 15px'>
                <table class="table table-striped table-hover">
                  <tr>
                    <th>Athlete Name</th>
                    <th>Athlete Age</th>
                    <th>Athlete Invite Status</th>
                  </tr>
                  <% @spots.each do |x| %>
                  <% if (x.team.id == @team.id)%>
                  <tr class="active">
                    <td><%= (Athlete.find_by(id: x.athlete_id)).name.capitalize %> </td>
                    <td><%= (Athlete.find_by(id: x.athlete_id)).age %> </td>
                    <td><%= x.invite_status.capitalize %></td>
                  </tr>
                  <% end %>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<!-- /. ROW  -->
</div>
<!-- /. PAGE INNER  -->
</div>
<!-- /. PAGE WRAPPER  -->
</div>
