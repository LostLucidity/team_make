
<%= form_for [@current_club, @team] do |f| %>
<div class="form-group field">
  <%= f.text_field :name, class: 'form-control', placeholder: 'Team Name' %>
</div>

<div class="form-group field">
  <%= f.text_field :age_group, class: 'form-control', placeholder: 'Age Group' %>
</div>

<div class="form-group field">
  <%= f.text_field :roster_size, class: 'form-control', placeholder: 'Roster Size' %>
</div>

<div class="form-group field">
  <%= f.text_field :coach, class: 'form-control', placeholder: 'Coach' %>
</div>

<div class="form-group field">
  <%= f.text_field :season, class: 'form-control', placeholder: 'Season' %>
</div>

  <%= f.hidden_field :club_id, value: current_club.id %>

<div class="actions">
  <input type="submit" name="commit" value="Create Team" class="btn btn-default">
</div>
<% end %>
