<div id="page-wrapper" >
  <div id="page-inner">
    <div class="row">
      <div class="col-md-12">
        <h2> <%= current_athlete.name.capitalize %> </h2>
        <h5>Welcome back <%= current_athlete.name.capitalize %>. Check below for any pending invitations or tryouts available. </h5>
      </div>
    </div>
    <hr />
    <!-- /. ROW  -->
    <div class="row">


      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Your Invitations To Join Teams
          </div>

          <div class="panel-body">
            <table class="table table-hover table-striped">
              <tr>
                <th><strong>Club</strong></th>
                <th><strong>Team</strong></th>
                <th><strong>Status</strong></th>
                <th><strong>Accept/Decline</strong></th>
              </tr>

              <% if current_athlete.spot %>
                <tr>
                  <td><%= current_athlete.spot.team.season.club.club_name %></td>
                  <td><%= current_athlete.spot.team.name %></td>
                  <td><%= current_athlete.spot.invite_status %>
                   <td><%= link_to accept_invite_path do %>
                      <span class="btn btn-success">Accept</span>
                    <% end %>
                    <%= link_to decline_invite_path do %>
                      <span class="btn btn-danger">Decline</span>
                    <% end %>
                  </td>
                <% else %>
                  <td> N/A </td>
                  <td> N/A </td>
                  <td> N/A <td>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>

    <hr />
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Available Tryouts
          </div>

          <div class="panel-body">
            <table class="table table-hover table-striped">
              <tr>
                <th><strong>Club</strong></th>
                <th><strong>Location</strong></th>
                <th><strong>Date</strong></th>
                <th><strong>Time</strong></th>
                <th><strong>Register</strong></th>
              </tr>

              <% @clubs.each do |club| %>
                <% if (club.seasons)%>
                  <% club.seasons.each do |season| %>
                    <% if (season.tryouts)%>
                      <% season.tryouts.each do |tryout| %>
              <tr>

                <td><%= season.club.club_name.capitalize %></td>
                <td><%= tryout.location.capitalize %></td>
                <td><%= tryout.date.strftime("%m/%d/%Y") %></td>
                <td><%= tryout.time %></td>
                <td <form action="." method="post">
        <input 
            type="submit" 
            value="Register"
            data-key="<%= Rails.configuration.stripe['publishable_key'] %>"
            data-description="Your payment description"
            data-amount="@amount"
            data-locale="auto">
        />

        <script src="https://checkout.stripe.com/v2/checkout.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.js"></script>
        <script>
        $(document).ready(function() {
            $(':submit').on('click', function(event) {
                event.preventDefault();
                var $button = $(this),
                    $form = $button.parents('form');
                var opts = $.extend({}, $button.data(), {
                    token: function(result) {
                        $form.append($('<input>').attr({ type: 'hidden', name: 'stripeToken', value: result.id })).submit();
                    }
                });
                StripeCheckout.open(opts);
            });
        });
        </script>
</form>
                      </td>
                
              </tr>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
              </table>
            </div>
          </div>
        </div>
      </div>
      <hr />
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              Registered Tryouts
            </div>

            <div class="panel-body">
              <table class="table table-hover table-striped">
                <tr>
                  <th><strong>Name</strong></th>
                  <th><strong>Location</strong></th>
                  <th><strong>Date</strong></th>
                  <th><strong>Time</strong></th>
                </tr>
                <% current_athlete.tryouts.each do |tryout| %>
                <tr>
                  <td><%=tryout.season.club.club_name.capitalize%></td>
                  <td><%=tryout.location.capitalize%></td>
                  <td><%=tryout.date.strftime("%m/%d/%Y")%></td>
                  <td><%=tryout.time %></td>
                </tr>
                <% end %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
