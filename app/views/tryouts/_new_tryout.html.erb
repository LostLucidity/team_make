
<%= form_for [current_club, @season, @tryout] do |f| %>
<div class="form-group field">
  <%= f.text_field :location, class: 'form-control', placeholder: 'Location' %>
</div>

<div class="form-group field">
  <%= f.date_field :date, class: 'form-control', placeholder: 'Date' %>
</div>

<div class="form-group field">
  <%= f.time_field :time, class: 'form-control', placeholder: 'Time' %>
</div>
  <%= f.hidden_field :season_id, value: @season.id %>

<div class="actions">
  <input type="submit" name="commit" value="Create Tryout" class="btn btn-default">
</div>
<% end %>
